{
  "manifest_version": 3,
  "name": "Effingo",
  "version": "1.0",
  "description": "Counts the number of text copies.",
  "permissions": [
    "clipboardRead",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png",
      "96": "images/icon96.png"
    }
  },
  "icons": {
    "48": "images/icon48.png",
    "96": "images/icon96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}